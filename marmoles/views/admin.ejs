<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Home</title>
    <link rel="stylesheet" href="/stylesheets/admin.css" />
    <%- include('modules/links.ejs') %>
  </head>
  <body class="d-flex flex-column min-vh-100">
    <%- include('modules/navbar.ejs') %>
    <main class="flex-fill overflow-hidden">
      <h1 class="pt-5 text-center">Panel de administrador</h1>
      <h3 class="pt-3 text-center">Gestion de usuarios</h3>
      <section class="section-1">
        <div class="container-xxl d-flex flex-column mt-5">
          <div class="row">
            <div class="col-12 col-md-6">
              <h4 class="text-center">Crear nuevo usuario</h4>
              <form class="" method="post" action="/user/admin/createUser">
                <div class="form-group">
                  <label for="exampleInputEmail1">Nombre</label>
                  <input
                    type="text"
                    class="form-control"
                    id="exampleInputName1"
                    aria-describedby="nameHelp"
                    name="name"
                  />
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Contraseña</label>
                  <input
                    type="password"
                    class="form-control"
                    id="exampleInputPassword1"
                    name="password"
                  />
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1"
                    >Repite la contraseña por favor</label
                  >
                  <input
                    type="password"
                    class="form-control"
                    id="exampleInputPassword2"
                    name="repPassword"
                  />
                </div>
                <div class="form-group">
                  <label for="inputGroupSelect03" class="form-label"
                    >Rango</label
                  >
                  <div class="input-group">
                    <select
                      class="form-select"
                      id="inputGroupSelect03"
                      name="role"
                    >
                      <option selected disabled>Selecciona un rango</option>
                      <option value="0">Editor</option>
                      <option value="1">Administrador</option>
                    </select>
                  </div>
                  <span class="text-danger"><%= message %></span>
                  <br />
                  <span class="text-success"><%= confirm %></span>
                </div>
                <button type="submit" class="btn btn-primary mt-3">
                  Crear usuario
                </button>
              </form>
            </div>
            <div class="col-12 col-md-6">
              <h4 class="text-center">Eliminar usuario</h4>
              <div class="table-responsive">
                <table class="table table-bordered table-hover mt-3">
                  <thead class="table-light">
                    <tr>
                      <th>Nombre</th>
                      <th>Rol</th>
                      <th>Acción</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% result.forEach(user => { %>
                    <tr>
                      <td><%= user.name %></td>
                      <td>
                        <%= user.role === 1 ? 'Administrador' : 'Editor' %>
                      </td>
                      <td class="text-center">
                        <form
                          method="post"
                          action="/user/admin/deleteUser"
                          onsubmit="return confirm('¿Estás seguro de que quieres eliminar a <%= user.name %>?');"
                        >
                          <input
                            type="hidden"
                            name="id_user"
                            value="<%= user.id_user %>"
                          />
                          <button
                            type="submit"
                            class="btn btn-sm btn-danger text-center align-content-center"
                          >
                            Eliminar
                          </button>
                        </form>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
                <span class="text-success"><%= confirmDelete %></span>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section class="section-2 mt-5 py-5">
        <div class="container-fluid g-0">
          <h4 class="bg-black py-5 text-white text-center">Categorías</h4>
          <div class="row row-gap-4 pt-4">
            <div class="col-12 col-md-4 d-flex justify-content-center">
              <a class="text-decoration-none">
                <div class="card shadow-sm">
                  <div class="card-body text-center">
                    <h5 class="card-title">
                      Elementos de Decoración y Arquitectura
                    </h5>
                  </div>
                </div>
              </a>
            </div>
            <div class="col-12 col-md-4 d-flex justify-content-center">
              <a class="text-decoration-none">
                <div class="card shadow-sm">
                  <div
                    class="card-body d-flex justify-content-center align-items-center text-center"
                  >
                    <h5 class="card-title">Baños y Mobiliario</h5>
                  </div>
                </div>
              </a>
            </div>
            <div class="col-12 col-md-4 d-flex justify-content-center">
              <a class="text-decoration-none">
                <div class="card shadow-sm">
                  <div
                    class="card-body d-flex justify-content-center align-items-center text-center"
                  >
                    <h5 class="card-title">Fuentes y Elementos de Agua</h5>
                  </div>
                </div>
              </a>
            </div>
            <div class="col-12 col-md-4 d-flex justify-content-center">
              <a class="text-decoration-none">
                <div class="card shadow-sm">
                  <div
                    class="card-body d-flex justify-content-center align-items-center text-center"
                  >
                    <h5 class="card-title">Arte Funerario y Monumentos</h5>
                  </div>
                </div>
              </a>
            </div>
            <div class="col-12 col-md-4 d-flex justify-content-center">
              <a class="text-decoration-none">
                <div class="card shadow-sm">
                  <div
                    class="card-body d-flex justify-content-center align-items-center text-center"
                  >
                    <h5 class="card-title">Mobiliario y Elementos Diversos</h5>
                  </div>
                </div>
              </a>
            </div>
            <div class="col-12 col-md-4 d-flex justify-content-center">
              <a class="text-decoration-none">
                <div class="card shadow-sm">
                  <div
                    class="card-body d-flex justify-content-center align-items-center text-center"
                  >
                    <h5 class="card-title">Decoración y Regalos Artesanales</h5>
                  </div>
                </div>
              </a>
            </div>
          </div>
        </div>
      </section>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
